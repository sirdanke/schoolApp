<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Page Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <% include ./partial/bootstrap %>
    <script src="main.js"></script>
</head>

<body>

    <div class="container">
        <h2><%= subject.subject_name %></h2>
 
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Score by Number</th>
                    <th>Score by Letter</th>
                </tr>
            </thead>
            <tbody>
                <% subject.Students.forEach(student => { %>               
                <tr>
                    <td><%=`${student.first_name} ${student.last_name}` %></td>
                    <% if(student.StudentSubject.Score == undefined) { %>
                        <td><a href="/subjects/<%= student.StudentSubject.id%>/give-score">give score</a></td>
                    <% } else {%>
                        <td><%= student.StudentSubject.Score %></td>
                    <% } %>
                    <td> <%= convertScore(student.StudentSubject.Score) %></td>
                    
                </tr>
            <% }) %>
            </tbody>
        </table>

       
    </div>


</body>

</html>